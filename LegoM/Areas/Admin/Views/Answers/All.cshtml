@model AnswersQueryModel

@{
    ViewBag.Title = "Answers Administration";
}

<h1 class="text-center mt-2 mb-3">@ViewBag.Title</h1>


@if (Model.SearchTerm != null)
{
    <h4>You have searched - @Model.SearchTerm</h4>
    <h4>Result : @Model.Answers.Count()</h4>

}


<form method="get">

    <div class="row mt-3 mb-5">

        <div class="col-md-7"></div>

        <div class="form-inline col-md-3">
            <div class="form-group">
                <input asp-for="SearchTerm" class="form-control mr-sm-2" placeholder="Search">
                <button asp-controller="Answers" asp-action="All" class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
                <span asp-validation-for="SearchTerm" class="small text-danger"></span>
            </div>
        </div>
    </div>
</form>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">User</th>
            <th scope="col">Content</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var answer in Model.Answers)
        {
            <tr>
                <td scope="col">@answer.PublishedOn</td>
                <td scope="col">@answer.UserName</td>

                <td scope="col">@(new string(answer.Content.Take(50).ToArray()))</td>




                <td scope="col">@(answer.IsPublic ? "Yes":"No")</td>


                <td scope="col">
                    <a asp-controller="Answers" asp-action="Delete" asp-route-id="@answer.Id" class="btn btn-danger float-right ml-3">Delete</a>
                    <a asp-controller="Answers" asp-action="ChangeVisibility" asp-route-id="@answer.Id" class="btn btn-info float-right ml-3 ">@(answer.IsPublic ? "Hide": "Show")</a>

                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalAnswers / AnswersQueryModel.AnswersPerPage);
}

<div class="row mt-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage==1 ? "disabled":string.Empty)"
           asp-controller="Answers"
           asp-action="All"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-currentPage="@previousPage"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage==maxPage || !Model.Answers.Any()  ? "disabled" : string.Empty)"
           asp-controller="Answers"
           asp-action="All"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-currentPage="@(Model.CurrentPage+1)">>></a>
    </div>
</div>

