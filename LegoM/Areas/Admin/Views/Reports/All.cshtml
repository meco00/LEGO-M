@model ReportsQueryModel

@{
    ViewBag.Title = "Reports Administration";
}
<h1 class="text-center mt-2 mb-3">@ViewBag.Title</h1>


@if (Model.SearchTerm != null)
{
    <h4>You have searched - @Model.SearchTerm</h4>
    <h4>Result : @Model.Reports.Count()</h4>

}


<form method="get">

    <div class="row mt-3 mb-5">
        <div class="col-md-7"></div>
        <div class="form-inline col-md-3 ">
            <div class="form-group">
                <input asp-for="SearchTerm" class="form-control mr-sm-2" placeholder="Search">
                <button asp-controller="Reports" asp-action="All" class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search</button>
                <span asp-validation-for="SearchTerm" class="small text-danger"></span>
            </div>
        </div>
    </div>
</form>



<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Date</th>
            <th scope="col">User</th>
            <th scope="col">Product</th>
            <th scope="col">Type</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model.Reports)
        {
            <tr>
                <td scope="col">@report.PublishedOn</td>
                <td scope="col">@report.UserName</td>
                <td scope="col">@report.ProductTitle</td>
                <td scope="col">@report.ReportType</td>


                <td scope="col">
                    <a asp-controller="Reports" asp-action="Delete" asp-route-id="@report.Id" class="btn btn-danger float-right ml-3">Delete</a>
                    <a  asp-controller="Products" asp-action="Reports" asp-route-id="@report.ProductId"  class="btn btn-primary float-right ml-3">Details</a>

                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalReports / ReportsQueryModel.ReportsPerPage);
}

<div class="row mt-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage==1 ? "disabled":string.Empty)"
           asp-controller="Reports"
           asp-action="All"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-currentPage="@previousPage"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage==maxPage || !Model.Reports.Any()  ? "disabled" : string.Empty)"
           asp-controller="Reports"
           asp-action="All"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-currentPage="@(Model.CurrentPage+1)">>></a>
    </div>
</div>

