@model QuestionFormModel


@{ 
    ViewBag.Title = "Add Question";
}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 ofset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">       
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" rows="4" class="form-control" placeholder="please enter Content"></textarea>
                <span asp-validation-for="Content" class="small text-danger"></span>
            </div>          
            <input class="btn btn-primary float-right" type="submit" value="Save" />
            <a asp-controller="Questions" asp-action="Mine" class="btn btn-outline-primary float-right mr-3">Back</a>
        </form>

    </div>
</div>