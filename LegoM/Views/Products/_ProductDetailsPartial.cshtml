@model ProductDetailsServiceModel

@{
    var images = new List<string>() { Model.MainImageUrl, Model.SecondImageUrl, Model.ThirdImageUrl };

    var isProductAvailable = Model.Quantity > 0;
}


<h1>@Model.Title, @Model.Condition</h1>

<div class="row mb-5">
    <div class="col-md-4">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">
                @for (int i = 0; i < images.Count; i++)
                {
                    var product = images[i];

                    <div class="carousel-item @(i==0 ? "active" : string.Empty)">
                        <img class="d-block w-100 mb-5" src="@product" alt="@Model.Title">
                    </div>


                }


            </div>
            <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <div class="col-md-4 offset-2 mt-5">
        @if (this.User.IsAdmin())
        {
        <a asp-area="Admin" asp-controller="Products" asp-action="ChangeVisibility" asp-route-id="@Model.Id" class="btn btn-danger mb-3 ">@(Model.IsPublic ? "Hide": "Approve")</a>

        }
        <h5>Category : <a asp-action="All" asp-route-category="@Model.CategoryName">@Model.CategoryName</a></h5>
        <h5 class="mb-3">SubCategory : <a asp-action="All" asp-route-category="@Model.CategoryName" asp-route-subCategory="@Model.SubCategoryName">@Model.SubCategoryName</a></h5>
        <h5 class="btn btn-warning">Shipment inspection</h5>
        <div class="mb-3"></div>
        <h5 class="btn btn-outline-@(isProductAvailable ? "primary":"danger")">@(isProductAvailable ? "Available": "Exhausted")</h5>


    </div>
    <div class="mb-5"></div>

    <div class="col-md-2 float-right mt-5">
        <h2 class="mb-3">@(Model.Price+ " лв.")</h2>
        <a asp-controller="Favourites" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-outline-danger">Add To Favourites</a>
        <div class="mb-3"></div>
        @if (Model.Quantity > 0)
        {
        <a asp-controller="ShoppingCart" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-info mr-3">Add To Shopping Cart</a>
        }

    </div>

</div>

<h4>Description:</h4>
<div class="mt-5 mb-5">

<h5 style="word-wrap: break-word">@Model.Description</h5>
</div>