@model ProductDeleteFormModel

@{
    ViewBag.Title = "Delete Product";
}


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 ofset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-check">
                <input asp-for="@Model.SureToDelete" />
                <label asp-for="@Model.SureToDelete">Are you sure to Delete this Product !</label>
            </div>
            <input class="btn btn-danger float-right" type="submit" value="Delete" />         
        </form>
    </div>
</div>