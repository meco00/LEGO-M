@model ProductDetailsAndSimilarProductsServiceModel


@{
    var images = new List<string>() { Model.Product.MainImageUrl, Model.Product.SecondImageUrl, Model.Product.ThirdImageUrl };
}
<h1>@Model.Product.Title, @Model.Product.Condition</h1>
<div class="mb-5"></div>
<div class="row">
    <div class="col-md-4">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">

            <div class="carousel-inner">
                @for (int i = 0; i < images.Count; i++)
                {
                    var product = images[i];

                    <div class="carousel-item @(i==0 ? "active" : string.Empty)">
                        <img class="d-block w-100 mb-5" src="@product" alt="@Model.Product.Title">
                    </div>


                }


            </div>
            <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <div class="col-md-4 offset-3">
        <h5>Category : <a asp-action="All" asp-route-category="@Model.Product.CategoryName">@Model.Product.CategoryName</a></h5>
        <h5>SubCategory : <a asp-action="All" asp-route-category="@Model.Product.CategoryName" asp-route-subCategory="@Model.Product.SubCategoryName">@Model.Product.SubCategoryName</a></h5>



        <div class="mb-5"></div>
        <a asp-controller="Products" asp-action="Favourites" asp-route-id="@Model.Product.Id" class="btn btn-danger">Add To Favourites</a>
        <div class="mb-3"></div>
        <a asp-controller="Products" asp-action="Favourites" asp-route-id="@Model.Product.Id" class="btn btn-danger mr-3">Add To Shopping Bag</a>
    </div>

</div>
<h1>Description</h1>
<h2 class="mb-5">@Model.Product.Description</h2>



<h2 class="mb-5">Similar Products:</h2>

<partial name="_ProductsPartial" model="@Model.SimilarProducts" />

<a asp-action="All" asp-route-category="@Model.Product.CategoryName" asp-route-subCategory="@Model.Product.SubCategoryName"  class=" offset-5 btn btn-primary">More similar products</a>


