@model ProductDetailsServiceModel


@{
    var images = new List<string>() { Model.MainImageUrl, Model.SecondImageUrl, Model.ThirdImageUrl };
}
 <h1>@Model.Title, @Model.Condition</h1>
<div class="mb-5"></div>
<div class="row">
    <div class="col-md-4">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            
            <div class="carousel-inner">
                @for (int i = 0; i < images.Count; i++)
                {
                    var product = images[i];

                    <div class="carousel-item @(i==0 ? "active" : string.Empty)">
                        <img class="d-block w-100 mb-5" src="@product" alt="@Model.Title">
                    </div>


                }


            </div>
            <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </div>
    <div class="col-md-4 offset-3">
        <h5>Category : <a asp-action="All" asp-route-category="@Model.CategoryName">@Model.CategoryName</a></h5>
        <h5>SubCategory : <a asp-action="All" asp-route-category="@Model.CategoryName" asp-route-subCategory="@Model.SubCategoryName">@Model.SubCategoryName</a></h5>
        
        
       
        <div class="mb-5"></div>
        <a asp-controller="Products" asp-action="Favourites" asp-route-id="@Model.Id" class="btn btn-danger">Add To Favourites</a>
        <a asp-controller="Products" asp-action="Favourites" asp-route-id="@Model.Id" class="btn btn-danger">Add To Shopping Bag</a>
    </div>

</div>
<h1>Description</h1>
<h2>@Model.Description</h2>


