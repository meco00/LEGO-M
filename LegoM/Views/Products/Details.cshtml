@model ProductDetailsServiceModel

 <h1>@Model.Title</h1>
<div class="mb-5"></div>
<div class="row">
    <div class="col-md-4">
        <img src="@Model.MainImageUrl" alt="@Model.Condition @Model.Title ">
    </div>
    <div class="col-md-4 offset-3">
        <h2>@Model.Description</h2>
        
       
        <div class="mb-5"></div>
        <a asp-controller="Products" asp-action="Favourites" asp-route-id="@Model.Id" class="btn btn-danger">Add To Favourites</a>
        <a asp-controller="Products" asp-action="Favourites" asp-route-id="@Model.Id" class="btn btn-danger">Add To Shopping Bag</a>
    </div>

</div>