@model BecomeMerchantFormModel

@{ 

    ViewBag.Title = "Become Merchant";

}

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 ofset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="please enter Name">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelephoneNumber"></label>
                <input asp-for="TelephoneNumber" class="form-control" placeholder="+359-999-999-999">
                <span asp-validation-for="TelephoneNumber" class="small text-danger"></span>
            </div>
         
            <input class="btn btn-primary float-right" type="submit" value="Continue" />
        </form>
    </div>
</div>