@model IndexViewModel

@{
    ViewData["Title"] = "Home";
}

@{
    var firstProduct = Model.Products.Any() ? Model.Products[0] : null;
    var secondProduct = Model.Products.Any() ? Model.Products[1] : null;
    var thirdProduct = Model.Products.Any() ? Model.Products[2] : null;
}

@if (!Model.Products.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Lego-M World</h1>
        <p class="lead">There are no products in system currently</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a asp-controller="Products" asp-action="Add" class="btn btn-primary btn-lg" href="#" role="button">Add Product</a>
        </p>
    </div>

}
else
{
    <div class="mb-5"></div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @if (firstProduct != null)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" src="https://frankfurt.apollo.olxcdn.com/v1/files/cghd8htkjxtb2-BG/image;s=1000x1000" width="400" height="700" alt="@firstProduct.Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@firstProduct.Id">@firstProduct.Title - @firstProduct.Condition</a></h5>
                        <p>@firstProduct.Price</p>
                    </div>
                </div>

            }
            @if (secondProduct != null)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://frankfurt.apollo.olxcdn.com/v1/files/cghd8htkjxtb2-BG/image;s=1000x1000" width="400" height="700" alt="@secondProduct.Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h5><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@secondProduct.Id">@secondProduct.Title - @secondProduct.Condition</a></h5>
                        <p>@secondProduct.Price</p>
                    </div>
                </div>

            }
            @if (thirdProduct != null)
            {
                <div class="carousel-item">
                    <img class="d-block w-100" src="https://frankfurt.apollo.olxcdn.com/v1/files/cghd8htkjxtb2-BG/image;s=1000x1000" width="400" height="700" alt="@firstProduct.Title">
                    <div class="carousel-caption d-none d-md-block ">
                        <h5><a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@thirdProduct.Id">@thirdProduct.Title - @thirdProduct.Condition</a></h5>
                        <h4 class="text-dark">@thirdProduct.Price</h4>
                    </div>
                </div>

            }

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="mb-5"></div>

    <div class="jumbotron jumbotron-fluid">
        <div class="row">
            <div class="col-md-6 text-center">
                <h2>Total Products: @Model.TotalProducts </h2>
            </div>
            <div class="col-md-6 text-center">
                <h2>Total Users: @Model.TotalUsers </h2>
            </div>
        </div>
    </div>


}
