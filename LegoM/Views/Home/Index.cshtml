@model IndexViewModel

@{
    ViewData["Title"] = "Home";
}


@if (!Model.Products.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Lego-M World</h1>
        <p class="lead">There are no products in system currently</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a asp-controller="Products" asp-action="Add" class="btn btn-primary btn-lg" href="#" role="button">Add Product</a>
        </p>
    </div>

}
else
{
    <div class="mb-5"></div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Products.Count(); i++)
            {
                var car = Model.Products[i];

                <div class="carousel-item @(i==0 ? "active" : string.Empty)">
                    <img class="d-block w-100" src="https://frankfurt.apollo.olxcdn.com/v1/files/cghd8htkjxtb2-BG/image;s=1000x1000" width="400" height="700" alt="@car.Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h1><a class="btn btn-primary mb-3" asp-controller="Products" asp-action="Details" asp-route-id="@car.Id">@car.Title - @car.Condition</a></h1>
                        <h2 class="text-danger">@car.Price</h2>
                    </div>
                </div>


            }
         

        </div>
        <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="mb-5"></div>

    <div class="jumbotron jumbotron-fluid">
        <div class="row">
            <div class="col-md-6 text-center">
                <h2>Total Products: @Model.TotalProducts </h2>
            </div>
            <div class="col-md-6 text-center">
                <h2>Total Users: @Model.TotalUsers </h2>
            </div>
        </div>
    </div>


}
