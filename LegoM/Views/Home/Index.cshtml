@model List<ProductServiceModel>

@{
    ViewData["Title"] = "Home";
}


@if (!Model.Any())
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Lego-M World</h1>
        <p class="lead">There are no products in system currently</p>
        <hr class="my-4">
        <p>It uses utility classes for typography and spacing to space content out within the larger container.</p>
        <p class="lead">
            <a asp-controller="Products" asp-action="Add" class="btn btn-primary btn-lg" role="button">Add Product</a>
        </p>
    </div>

}
else
{
    <div class="mb-5"></div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count(); i++)
            {
                var car = Model[i];

                <div class="carousel-item @(i==0 ? "active" : string.Empty)">
                    <img class="d-block w-100" src="https://frankfurt.apollo.olxcdn.com/v1/files/cghd8htkjxtb2-BG/image;s=1000x1000" width="400" height="700" alt="@car.Title">
                    <div class="carousel-caption d-none d-md-block">
                        <h1><a class="btn btn-primary mb-3" asp-controller="Products" asp-action="Details" asp-route-id="@car.Id">@car.Title - @car.Condition</a></h1>
                        <h2 class="text-danger">@car.Price</h2>
                    </div>
                </div>


            }
         

        </div>
        <a class="carousel-control-prev " href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <div class="mb-5"></div>

    <div class="row">
        <div class="col-12 text-center">
           <button class="btn btn-primary" id="statistics-button">Show statistics</button>
        </div>
    </div> 

    <div class="jumbotron d-none" id="statistics">
        <div class="row">
            <h2 class="col-md-4 text-center" id="total-products"></h2>
            <h2 class="col-md-4 text-center" id="total-users"></h2>
            <h2 class="col-md-4 text-center" id="total-soldProducts"></h2>
        </div>
    </div>

@section scripts
{ 
    <script>
        $('#statistics-button').on('click', ev => {
            $.get('/api/statistics', (data) => {
                $('#total-products').text(data.totalProducts + " Products");
                $('#total-users').text(data.totalUsers + " Users");
                $('#total-soldProducts').text(data.totalProductsSold + " Products Sold");

                $('#statistics').removeClass('d-none');
                $('#statistics-button').hide();
            });



        });


       
    </script>

}


}
