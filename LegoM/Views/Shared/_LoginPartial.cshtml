@using Microsoft.AspNetCore.Identity
@using LegoM.Data.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject IMerchantService merchantService

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {

        var userId = this.User.Id();

        var isUserMerchant = merchantService.IsMerchant(userId);

        var userIsAdmin = this.User.IsAdmin();


        @if (isUserMerchant && !userIsAdmin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Mine">My Products</a>
            </li>
        }
        else if (!userIsAdmin)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Reviews" asp-action="Mine">My Reviews</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Merchants" asp-action="Become">Become Merchant</a>
            </li>
        }
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Account</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
    <li class="nav-item">
        <a class="nav-link btn btn-link text-dark" href="#">Favourites</a>
    </li>
</ul>
